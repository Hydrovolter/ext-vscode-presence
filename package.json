{
  "name": "ext-vscode-presence",
  "repository": {
      "type": "git",
      "url": "https://github.com/Hydrovolter/ext-vscode-presence.git"
  },
  "displayName": "VSCode Presence API",
  "description": "Tracks VSCode Presence and sends it to a public API",
  "version": "1.0.0",
  "publisher": "Hydrovolter",
  "icon": "icon.png",
  "engines": { "vscode": "^1.60.0" },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "extension.js",
  "contributes": {
    "configuration": {
        "title": "VSCode Presence",
        "properties": {
            "vscode-presence.apiUrl": {
                "type": "string",
                "default": "https://api.hydrovolter.workers.dev/vscode/",
                "description": "The API URL to send workspace data."
            },
            "vscode-presence.syncInterval": {
                "type": "integer",
                "default": 5000,
                "minimum": 1000,
                "description": "Interval in milliseconds between API syncs (minimum 1000ms)."
            }
        }
    }
  },
  "scripts": { "package": "vsce package" },
  "dependencies": { 
      "node-fetch": "^2.6.1"
  },
  "devDependencies": { 
      "@vscode/vsce": "^2.12.0" 
  } 
}
